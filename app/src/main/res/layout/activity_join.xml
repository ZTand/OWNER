<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJoin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_join_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edt_join_userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserId"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_join_title"/>

        <EditText
            android:id="@+id/edt_join_userPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserPwd"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/edt_join_userId"/>

        <EditText
            android:id="@+id/edt_join_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserEmail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edt_join_userPwd"/>

        <EditText
            android:id="@+id/edt_join_userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserPhone"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edt_join_userEmail"/>

        <EditText
            android:id="@+id/edt_join_userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserId"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edt_join_userPhone"/>

        <Button
            android:id="@+id/btn_join"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Join"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#25aaff"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/edt_join_userAddress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>